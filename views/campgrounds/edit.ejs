<% layout("layouts/boilerplate")%>
  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 ">
      <form action="/campgrounds/<%= camp._id %>?_method=PATCH" method="POST" novalidate class="validated-form"
        enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input required class="form-control" placeholder="Sea Hunting Camp" type="text" id="title"
            name="campground[title]" value="<%=camp.title %>">
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">A Campground must have a title</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input required class="form-control" placeholder="Elk Grove, California" type="text" id="location"
            name="campground[location]" value="<%=camp.location%>">
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">A campground must have a location</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">price</label>
          <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input required value="<%= camp.price %>" name="campground[price]" id="price" placeholder="499"
              type="number" class="form-control" aria-label="Amount (to the nearest dollar)">
            <span class="input-group-text">.00</span>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">A campground must have a price</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Add more images for the Camp</label>
          <input class="form-control" type="file" id="image" name="image" multiple accept="image/*">
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">A campground must have at least one image</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea required class="form-control" id="description" rows="3"
            name="campground[description]"><%= camp.description %></textarea>
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">A campground must have a description</div>
        </div>
        <div class=" mb-3">
          <button class="btn btn-info">Update Campground</button>
        </div>
        <a href="/campgrounds/<%= camp._id %>">Back To Campground</a>
    </div>
    <div class="col-6">
      <h6>Delete Images: </h6>
      <div class="row row-cols-1 row-cols-md-4 g-4 mb-3 ">
        <% camp.images.forEach((image, i)=> { %>
          <div class="col">
            <div class="card">
              <label for="image-<%= i %>"><img class="card-img" src="<%= image.thumbnail %>" alt="">
                <div class="card-img-overlay text-end pt-1 pe-2">
                  <input class="form-check-input" type="checkbox" name="deleteImages[]" value="<%= image.filename %>"
                    id="image-<%= i %>">
                </div>
              </label>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
    </form>

  </div>