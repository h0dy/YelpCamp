<% layout("layouts/boilerplate")%>
  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds/<%= camp._id %>?_method=PATCH" method="POST">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" placeholder="Sea Hunting Camp" type="text" id="title" name="campground[title]"
            value="<%=camp.title %>">
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" placeholder="Elk Grove, California" type="text" id="location"
            name="campground[location]" value="<%=camp.location%>">
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">price</label>
          <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input value="<%= camp.price %>" name="campground[price]" id="price" placeholder="499" type="text"
              class="form-control" aria-label="Amount (to the nearest dollar)">
            <span class="input-group-text">.00</span>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="Image">Image Url</label>
          <input class="form-control" type="text" id="Image" value="<%= camp.image %>" name="campground[image]">
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" id="description" rows="3"
            name="campground[description]"><%= camp.description %></textarea>
        </div>
        <div class=" mb-3">
          <button class="btn btn-success">Update Campground</button>
        </div>
      </form>
      <a href="/campgrounds/<%= camp._id %>">Back To Campground</a>
    </div>
  </div>