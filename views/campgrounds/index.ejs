<% layout("layouts/boilerplate")%>

  <h1>All Campgrounds</h1>
  <div>
    <a href="/campgrounds/new">Add Campground</a>
  </div>
  <div class="row">
    <% for (let camp of camps) {%>
      <div class="col-6">
        <div class="card mb-3" style="width: 35rem;">
          <img src="<%= camp.image %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">
              <%= camp.title %>
            </h5>
            <p class="card-text">
              <%= camp.description %>
            </p>
            <p class="card-text text-light-emphasis">
              <%= camp.location %>
            </p>
            <a href="campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
          </div>
        </div>
      </div>
      <% }%>
  </div>