<% layout("layouts/boilerplate")%>
  <h1>All Campgrounds</h1>
  <div>
    <a href="/campgrounds/new">Add Campground</a>
  </div>
  <ul>
    <% for (let camp of camps) {%>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <img class="img-fluid" src="<%= camp.image %>" alt="">
          </div>
          <div class="col-mg-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= camp.title %>
              </h5>
              <p class="card-text">
                <%= camp.description %>
              </p>
              <p class="card-text text-light-emphasis">
                <%= camp.location %>
              </p>
              <a href="campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
            </div>
          </div>
        </div>
      </div>
      <% }%>
  </ul>